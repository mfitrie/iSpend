<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_addSpend">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/popup_border"
        android:backgroundTint="#222831"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your expenditure"
            android:textColor="#eee"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            />

        <EditText
            android:id="@+id/et_spendValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_corner"
            android:hint="RM 0.00"
            android:textColor="#eee"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of expenditure"
            android:textAlignment="center"
            android:textColor="#eee"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_food"
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:icon="@drawable/ic_food"
                android:padding="5dp"
                android:backgroundTint="#FD7014"
                app:shapeAppearanceOverlay="@style/Circular"
                />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_entertainment"
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:icon="@drawable/ic_entertainment"
                android:padding="5dp"
                android:backgroundTint="#FD7014"
                app:shapeAppearanceOverlay="@style/Circular"
                />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fuel"
                android:layout_width="74dp"
                android:layout_height="74dp"
                app:icon="@drawable/ic_fuel"
                android:padding="10dp"
                android:backgroundTint="#FD7014"
                app:shapeAppearanceOverlay="@style/Circular"
                />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_other"
                android:layout_width="74dp"
                android:layout_height="74dp"

                android:backgroundTint="#FD7014"
                android:padding="10dp"
                app:icon="@drawable/ic_other"
                app:shapeAppearanceOverlay="@style/Circular" />

        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>